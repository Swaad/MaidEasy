
@{
    ViewBag.Title = "UserLIst";
    Layout = null;
}
@{
    Html.RenderPartial("Header");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <title> User List</title>
    <link href="~/Content/worklist.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>


    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">


    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.21/r-2.2.5/datatables.min.css" />



</head>
<body>

    <div style="text-align:center;margin-top:80px;">
        <!-- <button type="button" class="collapsible">Add Admin</button> -->
        <br />
        <h2> List of Users </h2>
        <br><br>
        <div class="content">
            <form>
                <div class="form-group">
                    <div class="col-md-4 mb-3" style="margin:auto;">
                        <label for="validationServer01">Username</label>
                        <input type="text" class="form-control is-valid" id="validationServer01" value="Washing" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>

                    </div>
                    <div class="col-md-4 mb-3" style="margin:auto;">
                        <label for="validationServer01">Password</label>
                        <input type="text" class="form-control is-valid" id="validationServer01" value="10,000" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>

                    </div>


                </div>

                <button class="btn btn-primary" type="submit">Submit</button>

            </form>
        </div>
    </div>
    <div class="container">

        <div class="table-responsive">
            <table id="example" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>User Name</th>
                        <th>Full Name</th>
                        <th>Mobile</th>
                        <th>Thana</th>
                        <th>User Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>Tiger Nixon</td>
                        <td>System Architect</td>
                        <td>Edinburgh</td>
                        <td>61</td>
                        <td>2011/04/25</td>
                        <td>$320,800</td>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-secondary  btn-sm  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Action
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">View Profile</a>
                                    <a id="makeadmin" class="dropdown-item" href="#">Make Admin</a>
                                    <a class="dropdown-item" href="#">Block</a>
                                </div>
                            </div>
                        </td>
                    </tr>

                </tbody>
                <tfoot>

                </tfoot>
            </table>
        </div>
    </div>
   
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>



    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.21/r-2.2.5/datatables.min.js"></script>

    <script>

        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

    <script src="~/Scripts/JS/collpasible.js"></script>

</body>

</html>





