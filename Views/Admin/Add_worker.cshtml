<body>
    <div class="row">
        <div class="col-md-4">
            <h2>Personal Information</h2>
        </div>
        <div class="col-md-8">
            <label for="Name"><b>Name</b></label>
            <input type="text" placeholder="Name" name="name" required>
            <label for="Father's Name"><b>Father's Name</b></label>
            <input type="text" placeholder="Father's Name" name="fathername" required>
            <label for="Father's Name"><b>Phone</b></label>
            <input type="text" placeholder="phone no (+8801*********)" name="Phone">
            <label for="Father's Name"><b>Present Address</b></label>
            <input type="text" placeholder="Present Address" name="fathername" required>
            <label for="Father's Name"><b>Permanent Address</b></label>
            <input type="text" placeholder="Permanent Address" name="Phone" required>
            <div style="margin-top:20px;">
                <select class="selectpicker" data-width="fit" title="Gender">
                    <option>Male</option>
                    <option>Female</option>


                </select>
            </div>

            <div style="margin-top:20px;">
                <select class="selectpicker" data-width="fit" title="Maid Type" multiple>
                    <option>Temporary</option>
                    <option>Permanent</option>
                    <option>Elderly Care</option>
                    <option>Baby Care</option>


                </select>
            </div>

        </div>




    </div>

    <div class="row" style="margin-bottom:600px;">
