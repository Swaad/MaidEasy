@model MaidEasy.Models.MaidProfileModel
@{
    ViewBag.Title = "MaidProfile";
    Layout = null;
}

    <html>

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


        <link href="~/Content/maid_profile.css" rel="stylesheet">
        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <title>Maid Profile</title>

    </head>


    <body>

        @{
            Html.RenderPartial("Header");
        }


        <div class="box">
            <div class="row">
                <div class="col-md-6">
                    <form action="/Maid/Hire" method="get">
                        <div class="card" id="user-info" style="width:19rem;border:none;margin:auto;">
                            @{
                                string[] data = (string[])Session["CurWorker"];
                                var Type = data[1];
                                var type = "";
                                if (Type[0] == '1')
                                {
                                    type += "Temporary ";
                                }
                                if (Type[1] == '1')
                                {
                                    type += "Permanent ";
                                }
                                if (Type[2] == '1')
                                {
                                    type += "Baby Care ";
                                }
                                if (Type[3] == '1')
                                {
                                    type += "Eldery Care ";
                                }
                                double rat = Convert.ToDouble(data[2]);
                                string imgsrc = "/Content/Workers/";
                                imgsrc = imgsrc + data[5];
                            }


                            <!-- <img id="user-photo" src="~/Content/Images/profile.jpg" alt="user profile image"> -->
                            <div class="card-body text-center" style="background-color:#001a33;height:10rem;">

                                <div style="transform: translate(0px,60px);">
                                    <img  style="max-height:250px;max-width:250px;" id="user-photo" class="rounded-circle img-fluid" src="@imgsrc" alt="user profile image">
                                </div>
                            </div>

                            <div class="card-body" style="padding-top:150px;">
                                <h3 class="card-title" id="user-name">@data[0]</h3>
                                <div id="user-data">
                                    <div class="d-flex">
                                        <div class="col-md-6 text-right">
                                            <h4 class="category">Experience:</h4>
                                        </div><span class="user-input">@data[3] months</span>
                                    </div>
                                    <div class="d-flex">
                                        <h4 class="category col-md-6 text-right">Maid type:</h4><span class="user-input">@type</span>
                                    </div>
                                    <div class="d-flex">
                                        <h4 class="category  col-md-6 text-right">
                                            Ratings:
                                        </h4>
                                            @{
                                                while (rat > 0.5)
                                                {
                                                    <span class="text-warning fa fa-star user-input"></span>
                                                    rat -= 1;
                                                }
                                                while (rat > 0)
                                                {
                                                    <span class="text-warning fa fa-star user-input half-checked"></span>
                                                    rat = 0;
                                                }
                                            }
                                       
                                        </div>
                                        <div class="d-flex">
                                            <h4 class="category  col-md-6 text-right">Rating:</h4><span class="user-input">@data[2] / 5.00</span>
                                        </div>
                                        <div class="text-center" style="padding-top:40px;">

                                            @{
                                                if (ViewData["lastUrl"].ToString() == "/Service/Searching" || ViewData["lastUrl"].ToString() == "/Service/SearchingFull")
                                                {
                                                    <button type="submit" class="btn btn-dark">Hire</button>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>


                        </div>
                    </form>
                </div>

                <!--  <div id=page> -->


                <div class="col-md-6 align-self-center">


                    <div>

                        <div class="container "style="padding-top:40px;">
                            <!--  <h2 class="text-center" style="color:#f5f5f5;margin-bottom: 40px;">Comments</h2> -->
                            @{
                                string[,] feedback = (string[,])ViewData["feedback"];
                            }
                            @for (int i = 0; i < Convert.ToInt32(ViewData["cnt_feed"]); i++)
                            {
                                Double rating = Convert.ToDouble(feedback[i, 2]);
                                <div class="card justify-content-center align-self-cente" style="width:20rem;">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid" />
                                                <!--  <p class="text-secondary text-center">15 Minutes Ago</p> -->
                                            </div>
                                            <div class="col-md-10">
                                                <p>
                                                    <!-- <a class="float-left" href="https://maniruzzaman-akash.blogspot.com/p/contact.html"><strong>Maniruzzaman Akash</strong></a> -->
                                                    <strong>@feedback[i, 0]</strong>
                                                    @while (rating > 0.5)
                                                    {
                                                        <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                                                        rating -= 1;
                                                    }
                                                    @while (rating > 0)
                                                    {
                                                        <span class="float-right"><i class="text-warning fa fa-star half-checked"></i></span>
                                                        rating = 0;
                                                    }

                                                </p>
                                                <br>
                                                <p>
                                                    @feedback[i, 1]
                                                </p>
                                                <p>
                                                    <a class="float-right btn btn-outline-primary ml-2"><i class="fa fa-thumbs-down" aria-hidden="true"></i>2</a>
                                                    <a class="float-right btn text-white btn-danger"> <i class="fa fa-heart"></i>14</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br /> <br />

                            }


                        </div>


                    </div>
                    <!--  </div> -->
                    <!-- </div> -->

                </div>
            </div>
        </div>

    </body>
    @{
        Html.RenderPartial("footer");
    }
    </html>

