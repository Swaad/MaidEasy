
@{
    ViewBag.Title = "Hire_new";
    Layout = null;
}

@{
    Html.RenderPartial("Header");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hire</title>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">

    <link rel="stylesheet" href="~/Content/hirenew.css">

</head>

<body>
    <div class=" spaces">

        <div class="container " style=" padding: 100px 0px;"data-aos="zoom-out">
            <div class="card" style="max-width:35rem;margin:auto;">
                <div class="card-body">
                    <form action="/Maid/Booking" method="get">
                        <!--    <div class="form-group">
                            <label class="fontsize" for="exampleFormControlInput1"> Select Services</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="myCheck" onclick="myFunction()">
                                <label class="form-check-label" for="defaultCheck1">
                                    cooking
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="myCheck1" onclick="myFunction1()">
                                <label class="form-check-label" for="defaultCheck2">
                                    washing Clothes
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="myCheck2" onclick="myFunction2()">
                                <label class="form-check-label" for="defaultCheck2">
