    <!--     <div class="parallax"> -->
    <div class="area">
        <form action="/Maid/Booking" method="get">

            @{
                string[] data = (string[])Session["CurWorker"];
                string s = data[1];
                if (s[0].Equals('1'))
                {
                    <div class="card-box">
                        <div class="upper-box">
                            <h3>
                                Select the services you want
                            </h3>
                        </div>
                        <div class="choices">
                            @{
                                string[,] WData = (string[,])ViewData["workList"];
                            }
                            @for (int i = 0; i < Convert.ToInt32(Session["work_row"]); i++)
                            {
                                <label class="container">
                                    @WData[i, 0]
                                    @{
                                        var dynamicId = "check_" + i;
                                        var dId = "box_" + i;
                                    }

                                    <input type="checkbox" id="@dynamicId" onclick="myFunction('@dId' ,'@dynamicId' , '@WData[i, 0]', @Session["SearchTimeForWorker"], @WData[i, 1] )">
                                    <input type="hidden" id="@dId" name="@dId" />
                                    <span class="checkmark"></span>
                                </label>

                                System.Diagnostics.Debug.WriteLine("--------------------------------");
                                System.Diagnostics.Debug.WriteLine(@Int32.Parse(WData[i, 1]));
                                System.Diagnostics.Debug.WriteLine("--------------------------------");


                            }
                            <div class="invalid-feedback" id="invalid-message">
                                Please select an option
                            </div>
                        </div>

                        <!--  <div class="alert alert-danger col-md-6" role="alert">
                                                   Please select one option
                                                </div>
