
@{
    ViewBag.Title = "Hire";
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="hire.css" rel="stylesheet" />

    <title>Hire</title>

</head>


<body>

    <div class="head-box">

        <div class="hire">
            <header>
                <h2>Select the services you want</h2>
            </header>
            <span> <br> Select one or multiple at the basis of your needs. </span> <hr>

        </div>


    </div>



    <div class="card-box">

        <div class="choices">
            <label class="container">
                Cooking
                <input type="checkbox" checked="checked">
                <span class="checkmark"></span>
            </label>

            <label class="container">
                Washing Clothes
                <input type="checkbox">
                <span class="checkmark"></span>
            </label>

            <label class="container">
                Home Cleaning
                <input type="checkbox">
                <span class="checkmark"></span>
            </label>

        </div>



        <div class="Salary">

            <div class="salary_tag"><strong>Salary</strong></div>
            <div class="salary_amount"><strong>BDT 0.00</strong></div>

        </div>


        <div style="text-align:center;">

            <button type="button" id="ok_button">OK</button>

        </div>


    </div>







</body>
</html>