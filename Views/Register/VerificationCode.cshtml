@model MaidEasy.Models.VerificationCodeModel
@{
    ViewBag.Title = "VerificationCode";
    Layout = null;
}
@{
    Html.RenderPartial("Header");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title> Phone No Verification </title>
    <link href="~/Content/login.css" rel="stylesheet" />

    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-database.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-storage.js"></script>
</head>
<body>

    <div class="container something" style=" margin-top: 190px !important;
    margin-bottom: 150px !important;
    text-align: center !important;">
        <form id="myForm" onsubmit="codeverify('@ViewData["codeverify"]')" class="signup-form" action="javascript:void(0)" method="post">
            <div style="text-align: -webkit-center;">
                <div id="recaptha-container"></div>
            </div><br />

                                                <div class="submit-area" data-aos="zoom-out">
                                                    <h2 class="veri">Verification Code</h2>
                                                    <button style="margin:1rem;" type="button" class="login" name="signupbutton" onclick="phoneAuth('@ViewData["phoneNumber"]');"> Send code</button>

                                                    <input class="form-control" type="text" id="verificationCode" placeholder="Enter Verfication code" name="VerificationCode" required>
                                                    <!-- <button type="submit" onclick="codeverify()"> Verify code </button> -->
                                                    <button style="margin:1rem;" class="login" type="submit"> Verify code </button>

                                                    <br> <br />


                                                    <!-- <button id="signup-btn" type="submit" class="btn btn-primary btn-block" name="signupbutton"> Sign Up </button> -->
                                                </div>



                </form> <br>
    </div>
    

    @if (ViewBag.Error != null)
    {
        <script>
            alert("@ViewBag.Error");
        </script>
    }
    @{
        Html.RenderPartial("footer");
    }

    <script src="~/Scripts/JS/index.js" type="text/javascript"></script>
    <script src="~/Scripts/NumberAuthentication.js" type="text/javascript"></script>

</body>
</html>