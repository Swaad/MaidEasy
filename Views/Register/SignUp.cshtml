@model MaidEasy.Models.SignupModel
@{
    ViewBag.Title = "SignUp";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title> SignUp </title>
    <link href="~/Content/signup.css" rel="stylesheet" />
   
    <!--<link href="signup.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>


    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-database.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-storage.js"></script>
    
</head>

<body>

    <div class='signup-page'>
        <div class='form'>
            <form class="signup-form" action="/Register/CheckInfo" method="post">



   
            


                    <input id="username" type="text" placeholder="User Name" name="Username" value="@TempData["username"]" required>
                    <input id="name" type="text" name="name" placeholder="Name" value="@TempData["name"]" required>
                    <input id="Phoneno" type="text" name="Phone" placeholder="phone no (+8801*********)" value="@TempData["phone"]" required>
                    <input id="presentaddress" type="text" name="presentAddress" placeholder="Present Address" value="@TempData["presentAddress"]" required>
                    <input id="permanenttaddress" type="text" name="permanentAddress" placeholder="Permanent Address" value="@TempData["permanentAddress"]" required>
                    <input id="signUpPassword" type="password" name="signUpPassword" placeholder="Password" value="@TempData["pass"]" required>
                    <input id="confirmPassword" type="password" name="confirmPassword" placeholder="confirmPassword" value="@TempData["conpass"]" required>

                    <input id="profileimage" type="file" name="profileimage">



   


            <button>Submit</button>

        </form>




   
            <!-- SOCIAL PANEL HTML

            <button class="floating-btn">
                Get in Touch
            </button>
            -->
            <br>


           

       

                   

                    <!----<button id="signup-btn" type="button" class="btn btn-primary btn-block" name="signupbutton" onclick="phoneAuth();">Sign Up</button> -->
      


                    <button id="submit-btn" type="submit" class="btn btn-primary btn-block" name="submitbutton"  >Sign Up</button>
                    <!----<button id="signup-btn" type="button" class="btn btn-primary btn-block" name="signupbutton" onclick="phoneAuth();">Sign Up</button> -->
           



    </div>


    @*Footer*@
    @{
        Html.RenderPartial("footer");
    }

    @if (ViewBag.Error != null)
    {
        <script>
            alert("@ViewBag.Error");
        </script>
    }


    <script src="~/Scripts/JS/index.js" type="text/javascript"></script>
    <script src="~/Scripts/NumberAuthentication.js" type="text/javascript"></script>
    <script src="~/Scripts/JS/signupscript.js" type="text/javascript"></script>


</body>
</html>