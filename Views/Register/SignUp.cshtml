@model MaidEasy.Models.SignupModel
@{
    ViewBag.Title = "SignUp";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title> SignUp </title>
    <link href="~/Content/signup.css" rel="stylesheet" />

    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-database.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-storage.js"></script>
</head>

<body>
    <div class='signup-page'>
        <div class='form'>
            <form class="signup-form" action="/Register/AddUser" method="post">


                    <input id="username" type="text" placeholder="User Name" name="Username" required>
                    <input id="name" type="text" name="name" placeholder="Name" required>
                    <input id="Phoneno" type="text" name="Phone" placeholder="phone no (+8801234567891)" required>
                    <input id="presentaddress" type="text" name="presentaddress" placeholder="Present Address" required>
                    <input id="permanenttaddress" type="text" name="permanentaddress" placeholder="Permanent Address" required>
                    <input id="signUpPassword" type="password" name="signUpPassword" placeholder="Password" required>
                    <input id="confirmPassword" type="password" name="confirmPassword" placeholder="confirmPassword" required>

                    <input id="profileimage" type="file" name="profileimage">



                    <button id="signup-btn" type="submit" class="btn btn-primary btn-block" name="signupbutton"  >Sign Up</button>
                    <!----<button id="signup-btn" type="button" class="btn btn-primary btn-block" name="signupbutton" onclick="phoneAuth();">Sign Up</button> -->
            </form> <br>


        </div>
    </div>

    @*Footer*@
    @{
        Html.RenderPartial("footer");
    }

    @if (ViewBag.Error != null)
    {
        <script>
            alert("@ViewBag.Error");
        </script>
    }

    <script src="~/Scripts/JS/index.js" type="text/javascript"></script>
    <script src="~/Scripts/NumberAuthentication.js" type="text/javascript"></script>

</body>
</html>