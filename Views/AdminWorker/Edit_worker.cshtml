
@{
    ViewBag.Title = "Edit_worker";
    Layout = null;
}

@{
    Html.RenderPartial("Header");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <title> Edit Worker </title>
    <link href="~/Content/edit_worker.css" rel="stylesheet" />
    <script src="~/Scripts/JS/FormeditableScript.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-database.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-storage.js"></script>
</head>



<body>
    <div class="area">
        @{
            string[] WorkerData = (string[])ViewData["WorkerData"];
            string[] thanaList = (string[])ViewData["thanaList"];

            string temp = WorkerData[6];
            String[] spearator = { "\n" };
            String[] typeList = temp.Split(spearator, StringSplitOptions.RemoveEmptyEntries);
            int TypeCnt = typeList.Length;


            temp = WorkerData[7];
            //String[] areaList = temp.Split(spearator, StringSplitOptions.RemoveEmptyEntries);
            int areaCnt = temp.Length;

            string typeString = WorkerData[9];
            string areaString = temp;


            string source = "/Content/Workers/";
            source = source + WorkerData[8].ToString();

        }
        <form action="/AdminWorker/SaveWorkerData" class="form" autocomplete="off" method="post" enctype="multipart/form-data">
        <!-- <form  onsubmit="return false"> -->
        <div class="row" style="margin-bottom:80px;">
            <div class="col-md-3 rounded-left columnstyle">
                <div id="user-photo-wrapper">
                    <img id="user-photo" src="@source" alt="Worker profile image" >
                </div>
                <input type="hidden" name="img" value="@WorkerData[8].ToString()" />
                <input id="file" type="file" accept='image/*' name="file" >

            </div>
            <div class="col-md-7 rounded-right" style="background-color:#e4e5e8;padding: 25px;padding-left:50px;">

                <label for="Name"><b>Name</b></label>
                <input id="name" type="text" placeholder="Name" name="name" value="@WorkerData[0]" readonly required>
                <label for="Father's Name"><b>Father's Name</b></label>
                <input id="father" type="text" placeholder="Father's Name" name="fathername" value="@WorkerData[1]" readonly required>
                <label for="Father's Name"><b>Phone</b></label>
                <input id="phone" type="text" placeholder="phone no (+8801*********)" name="Phone" value="@WorkerData[2]" readonly required>
                <label for="Father's Name"><b>Present Address</b></label>
                <input id="present" type="text" placeholder="Present Address" name="PresentAddress" value="@WorkerData[3]" readonly required>
                <label for="Father's Name"><b>Permanent Address</b></label>
                <input id="permanent" type="text" placeholder="Permanent Address" name="PermanentAddress" value="@WorkerData[4]" readonly required>


                <div id="selectbox1" style="margin-top:20px;margin-bottom: 20px;">

                    <select class="selectpicker" data-width="fit" title="Gender" name="gender">
                        @{
                            if (WorkerData[5].ToString().Equals("Male"))
                            {
                                <option selected="selected">Male</option>
                                <option>Female</option>
                            }
                            else
                            {
                                <option>Male</option>
                                <option selected="selected">Female</option>
                            }
                        }

                    </select>

                </div>
                <div id="selectboxhide" style="margin-bottom: 20px;">
                    <label for="Gender"><b>Gender</b></label>
                    <input type="text" value="@WorkerData[5]" readonly>
                </div>
                <!--  <div style="margin-top:20px;">
                <select class="selectpicker" data-width="fit" title="Maid Type" multiple>
                    <option>Temporary</option>
                    <option>Permanent</option>
                    <option>Elderly Care</option>
                    <option>Baby Care</option>


                </select>
            </div>-->

                <label for="Work Type"><b>Work Type</b></label>
                <div id="choicelist" class="choices">
                    <ul>
                        @{ for (int i = 0; i < TypeCnt; i++)
                            {
                                <li>@typeList[i]</li>
                            }
                        }

                    </ul>

                </div>
                <div id="choicebox" class="choices">
                    <label class="container">
                        Temporary
                        @{
                            if (typeString[0] == '1')
                            {
                                <input type="checkbox" checked="checked" name="temporaryType">}
                            else
                            {
                                <input type="checkbox" name="temporaryType">
                            }


                        }
                        <span class="checkmark"></span>
                    </label>

                    <label class="container">
                        Permanent
                        @{
                            if (typeString[1] == '1')
                            {
                                <input type="checkbox" checked="checked" name="permanentType">}
                            else
                            {
                                <input type="checkbox" name="permanentType">
                            }


                        }
                        <span class="checkmark"></span>
                    </label>

                    <label class="container">
                        Baby Care
                        @{
                            if (typeString[2] == '1')
                            {
                                <input type="checkbox" checked="checked" name="babyCareType">}
                            else
                            {
                                <input type="checkbox" name="babyCareType">
                            }


                        }
                        <span class="checkmark"></span>
                    </label>

                    <label class="container">
                        Elderly Care
                        @{
                            if (typeString[3] == '1')
                            {
                                <input type="checkbox" checked="checked" name="elderlyCareType">}
                            else
                            { 
                                <input type="checkbox" name="elderlyCareType">
                            }


                        }
                        <span class="checkmark"></span>
                    </label>

                </div>
                <!--  </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-8"> -->
                <label for="Work Area"><b>Work Area</b></label>
                <br>
                <div id="thanalist" class="choices">
                    <ul>
                        @{
                            for (int i = 0; i < areaCnt; i++)
                            {
                                if (areaString[i] == '1')
                                {
                                    <li> @thanaList[i]</li>
                                }
                            }
                        }
                    </ul>

                </div>
                <div id="selectbox2" style="margin-bottom:20px;">
                    <select name="area" class="selectpicker" style="margin-bottom:20px;" data-width="fit" data-style="btn-info" data-live-search="true" multiple>
                        @{
                            for (int i = 0; i < areaCnt; i++)
                            {
                                if (areaString[i] == '1')
                                {
                                    <option selected="selected">@thanaList[i]</option>
                                }
                                else
                                {
                                    <option>@thanaList[i]</option>
                                }
                            }
                        }

                    </select>
                </div>
                <span>
                    <div id="edit" style="text-align:center;">
                        <button type="button" style="margin-right: 40px;" class="btn btn-outline-dark collapsible" name="edit">Edit</button>

                    </div>

                    <div id="save" style="text-align:center;">
                        <button type="submit" style="margin-right: 40px;" class="btn btn-outline-dark collapsible" name="save">Save</button>

                    </div>

                    <div style="text-align:center;">
                        <button type="button" class="btn btn-outline-dark collapsible">Delete</button>

                    </div>
                </span>
            </div>


            <!--<button>Submit</button> -->



        </div>
        </form>
    </div>






    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>


</body>


</html>




