                <label for="Father's Name"><b>Father's Name</b></label>
                <input id="father" type="text" placeholder="Father's Name" name="fathername" value="@WorkerData[1]" readonly required>
                <label for="Father's Name"><b>Phone</b></label>
                <input id="phone" type="text" placeholder="phone no (+8801*********)" name="Phone" value="@WorkerData[2]" readonly required>
                <label for="Father's Name"><b>Present Address</b></label>
                <input id="present" type="text" placeholder="Present Address" name="fathername" value="@WorkerData[3]" readonly required>
                <label for="Father's Name"><b>Permanent Address</b></label>
                <input id="permanent" type="text" placeholder="Permanent Address" name="Phone" value="@WorkerData[4]" readonly required>


                <div id="selectbox1" style="margin-top:20px;margin-bottom: 20px;">

                    <select class="selectpicker" data-width="fit" title="Gender">
                        @{
                            if (WorkerData[5].ToString().Equals("Male"))
                            {
                                <option selected="selected">Male</option>
                                <option>Female</option>
                            }
                            else
                            {
                                <option>Male</option>
                                <option selected="selected">Female</option>
                            }
                        }

                    </select>

                </div>
                <div id="selectboxhide" style="margin-bottom: 20px;">
                    <label for="Gender"><b>Gender</b></label>
                    <input type="text" value="@WorkerData[5]" readonly>
                </div>
