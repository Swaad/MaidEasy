@{
    ViewBag.Title = "Add_worker";
    Layout = null;
}

@{
    Html.RenderPartial("Header");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <title>Add Worker</title>
    <link href="~/Content/Add_worker.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>


</head>


<body>
    <form id="form" action="/AdminWorker/AddNewWorker" class="form" autocomplete="off" method="post" enctype="multipart/form-data">
        <div class="row" style="padding-top:100px;">
            @{
                List<string> thanalist = (List<string>)ViewData["thanaList"];

            }
            <div class="col-md-4 rounded-left columnstyle borderbtm">
                <div style="text-align:center;">
                    <h2>Personal Information</h2>
                </div>
            </div>
            <div class="col-md-7 rounded-right borderbtm" style="background-color: #264a96;padding:35px;padding-top:50px;">
                <label for="Name"><b>Name</b></label>
                <input type="text" placeholder="Name" name="name" required>
                <label for="Father's Name"><b>Father's Name</b></label>
                <input type="text" placeholder="Father's Name" name="fathername" required>
                <label for="Father's Name"><b>Phone</b></label>
                <input type="text" placeholder="phone no (+8801*********)" name="Phone">
                <label for="Father's Name"><b>Present Address</b></label>
                <input type="text" placeholder="Present Address" name="presentAddress" required>
                <label for="Father's Name"><b>Permanent Address</b></label>
                <input type="text" placeholder="Permanent Address" name="permanentAddress" required>
                <div style="margin-top:20px;margin-bottom: 20px;">
                    <select class="selectpicker" data-width="fit" title="Gender" name="gender">
                        <option>Male</option>
                        <option>Female</option>


                    </select>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile" name="file">
                    <label class="custom-file-label" for="customFile">Choose an Image</label>
                </div>
                <!--  <div style="margin-top:20px;">
            <select class="selectpicker" data-width="fit" title="Maid Type" multiple>
                <option>Temporary</option>
                <option>Permanent</option>
                <option>Elderly Care</option>
                <option>Baby Care</option>


            </select>
        </div>-->

            </div>




        </div>

        <div class="row" style="margin-bottom:60px;">
            <div class="col-md-4 rounded-left columnstyle">
                <div style="    text-align: center;">
                    <h2>Work related information</h2>
                </div>
            </div>


            <div class="col-md-7 rounded-right" style="background-color: #264a96;padding:35px;">
                <label for="Father's Name"><b>Work Type</b></label>
                <div class="choices">
                    <label class="container">
                        Temporary
                        <input type="checkbox" checked="checked" name="temporaryType">
                        <span class="checkmark"></span>
                    </label>

                    <label class="container">
                        Permanent
                        <input type="checkbox" name="permanentType">
                        <span class="checkmark"></span>
                    </label>

                    <label class="container">
                        Baby Care
                        <input type="checkbox" name="babyCareType">
                        <span class="checkmark"></span>
                    </label>

                    <label class="container">
                        Elderly Care
                        <input type="checkbox" name="elderlyCareType">
                        <span class="checkmark"></span>
                    </label>


                </div>
                <!--  </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-8"> -->
                <label for="Father's Name"><b>Work Area</b></label>
                <br>
                <div style="margin-bottom:20px;">
                    <select name="area" class="selectpicker" style="margin-bottom:20px;" data-width="fit" data-style="btn-info" data-live-search="true" multiple>
                        @{
                            for (int i = 0; i < thanalist.Count; i++)
                            {
                                <option> @thanalist[i] </option>
                            }
                        }

                    </select>
                </div>
            </div>
        </div>
        <div style="text-align:center;">
            <button type="submit" class="btn btn-outline-dark collapsible">Submit</button>
        </div>
    </form>

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

</body>
</html>
