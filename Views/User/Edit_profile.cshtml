
@{
    ViewBag.Title = "Edit_profile";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
 
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title> Edit Profile </title>
    <link href="~/Content/editprofile.css" rel="stylesheet" />

    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-database.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.12.0/firebase-storage.js"></script>
</head>


@{
    Html.RenderPartial("Header");
}

<body>
    <div class="area">
        <div class="containerno">
            <div class="header">
                <h2>Edit Profile</h2>
            </div>
            <div id="user-photo-wrapper">
                <img id="user-photo" src="~/Content/Images/profile.jpg" alt="user profile image">
            </div>
            <form id="form" action="/Register/CheckInfo" class="form" autocomplete="off" method="post">
                <!--     <form id="form" action="javascript:void(0)" class="form" autocomplete="off" method="post">-->
                <div class="form-control">
                    <label for="username">Username</label>
                    <input id="username" type="text" name="Username" value="@TempData["username"]" />
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label for="username">Name</label>
                    <input id="name" type="text" name="name" value="@TempData["name"]" />
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label for="username">Phone No.</label>
                    <input id="Phoneno" type="text" name="Phone" value="@TempData["phone"]" />
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label for="username">Present Address</label>
                    <input id="presentaddress" type="text" name="presentAddress" value="@TempData["presentAddress"]" />
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control autocomplete">
                    <label for="username">Thana</label>

                    <input id="thana" type="text" name="myCountry" value="Gulshan">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>




                </div>
                <div class="form-control">
                    <label for="username">Permanent Address</label>
                    <input id="permanentaddress" type="text" name="permanentAddress" placeholder="Permanent Address" value="@TempData["permanentAddress"]" />
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label for="username">Old Password</label>
                    <input id="oldpassword" type="password" name="signUpPassword" value="@TempData["pass"]" />
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label for="username">New Password</label>
                    <input id="password" type="password" name="signUpPassword" value="@TempData["pass"]" />
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label for="username">Retype New Password</label>
                    <input id="password2" type="password" name="confirmPassword" value="@TempData["conpass"]" />
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>

                <div class="form-control">
                    <label for="username">Enter Profile Image</label>
                    <input id="profileimage" type="file" name="profileimage">


                </div>


                <!--<button>Submit</button> -->

                <button id="submit-btn" type="button" class="btn btn-primary btn-block" name="submitbutton">Submit</button>
            </form>
        </div>

    </div>



    <!-- @*Footer*@
    @{
        Html.RenderPartial("footer");
    }    -->

    @if (ViewBag.Error != null)
    {
        <script>
            alert("@ViewBag.Error");
        </script>
    }

    <script src="~/Scripts/JS/index.js" type="text/javascript"></script>
    <script src="~/Scripts/NumberAuthentication.js" type="text/javascript"></script>
    <script src="~/Scripts/JS/thanaScript.js" type="text/javascript"></script>
    <script src="~/Scripts/JS/editprofilescript.js" type="text/javascript"></script>


</body>
</html>


