
@{
    ViewBag.Title = "hired_workers_profile";
      Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <link href="~/Content/hired_workers_profile.css" rel="stylesheet"/>

    <title>Hired Workers Profile</title>

</head>

@{
    Html.RenderPartial("Header");
}

<body>



    <div class="head-box">

        <div class="profile">
            <header>
                <h1>Hired Workers Profile</h1>

            </header>

        </div>

    </div>

    <div style="text-align:center;margin-bottom:60px;">

        <!--   <div class="current-box"> -->
        <!-- <form action="/User/feedback" method="post"> -->
        <button type="button" class="collapsible">Current Workers</button>
        <div class="content"style="padding-top: 60px;">

            @{
                string[,] data1 = (string[,])ViewData["data1"];
            }
            @for (int i = 0; i < Convert.ToInt32(ViewData["cnt1"]); i++)
            {
                string work = data1[i, 6];
                String[] spearator = { "\n" };
                String[] strlist = work.Split(spearator, StringSplitOptions.RemoveEmptyEntries);
                int Wcnt = strlist.Length;
                string imgsrc = "/Content/Workers/";
                imgsrc = imgsrc + data1[i, 8];

            <div class="card"style="max-width:18rem;margin:auto;border:none;">



                <div class="card-body text-center" style="background-color:#001a33;height:10rem;">
                    <!--   <div class="time"><h2>Current Worker</h2></div>-->
                    <div style="transform: translate(0px,60px);">
                        <img style="max-height:250px;max-width:250px;" class="rounded-circle img-fluid" src="@imgsrc" />
                    </div>
                </div>





                <div class="card-body" style="padding-top:150px;">




                    <div id="user-data">
                        <div class="row">
                            <div class="col-6 col-md-6 text-right">
                                <h3 class="category">
                                    Name:
                                </h3>
                            </div>
                            <div class="col-6 col-md-6 text-left">

                                <span class="user-input">@data1[i, 0]</span>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-6 col-md-6 text-right">
                                <h3 class="category">Start Month:</h3>
                            </div>
                            <div class="col-6 col-md-6 text-left">
                                <span class="user-input">@data1[i, 1]</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-6 text-right">
                                <h3 class="category">End Month:</h3>
                            </div>
                            <div class="col-6 col-md-6 text-left">
                                <span class="user-input">@data1[i, 2]</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-6 text-right">
                                <h3 class="category">Start Time:</h3>
                            </div>
                            <div class="col-6 col-md-6 text-left">
                                <span class="user-input">@data1[i, 3]</span>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-6 col-md-6 text-right">
                                <h3 class="category">End Time:</h3>
                            </div>
                            <div class="col-6 col-md-6 text-left">
                                <span class="user-input">@data1[i, 4]</span>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-6 col-md-6 text-right">
                                <h3 class="category">Amount:</h3>
                            </div>
                            <div class="col-6 col-md-6 text-left">
                                <span class="user-input">@data1[i, 5] BDT</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-6 text-right">
                                <h3 class="category">
                                    Work-list:
                                </h3>
                            </div>
                            <div class="col-6 col-md-6 text-left">
                                <span class="user-input" style="display:inline-block;">
                                    <ul style="padding-left:0px;">

                                        @for (int j = 0; j < Wcnt - 1; j++)
                                        {
                                            <li>@strlist[j]</li>
                                        }
                                    </ul>
                                </span>
                            </div>
                        </div>
                    </div>
                    <form action="/User/feedback" method="post">
                        <button type="submit" class="btn buttonprimary" name="maid" value="@data1[i, 7]">Give Feedback</button>
                    </form>
                    <br>
                    <form action="/Maid/MaidProfile" method="post">
                        <a href="@Url.Action("MaidProfile", "Maid", new { id =  @data1[i, 7] })" class="btn buttonprimary" name="link" value="@data1[i, 7]">View profile</a>
                        <!-- <button type="submit" class="btn buttonprimary" name="maid" value="@data1[i, 7]">View Profile</button> -->
                    </form>
                </div>


                <!--        <div style="text-align:center;">

    <button type="button" id="hw_button">Give Feedback</button>

    </div> -->
                

            </div>
                <br />
            }
        </div>

        <!-- </form> -->
        <br>
        <!-- 	</div>  -->
        <!--<div class="previous-box"> -->

        <form action="/User/feedback" method="post">
            <button type="button" class="collapsible">Previous Workers</button>
            <div class="content">
                @{
                    string[,] data2 = (string[,])ViewData["data2"];
                }
                @for (int i = 0; i < Convert.ToInt32(ViewData["cnt2"]); i++)
                {
                    string work = data2[i, 6];
                    String[] spearator = { "\n" };
                    String[] strlist = work.Split(spearator, StringSplitOptions.RemoveEmptyEntries);
                    int Wcnt = strlist.Length;
                    string imgsrc = "/Content/Workers/";
                    imgsrc = imgsrc + data2[i, 8];

                <div class="card" style="max-width:18rem;margin:auto;border:none;">



                    <div class="card-body text-center" style="background-color:#001a33;height:10rem;">
                        <!-- <div class="time"><h2>Previous Worker</h2></div> -->
                        <div style="transform: translate(0px,60px);">
                            <img style="max-height:250px;max-width:250px;" class="rounded-circle img-fluid" src="@imgsrc" />
                        </div>
                    </div>



                    <div class="card-body" style="padding-top:150px;">


                        <div id="user-data">
                            <div class="row">
                                <div class="col-6 col-md-6 text-right">
                                    <h3 class="category">Experience:</h3>
                                </div>
                                <div class="col-6 col-md-6 text-left">
                                    <span class="user-input">3 Year</span>
                                </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 col-md-6 text-right">
                                        <h3 class="category">Maid type:</h3>
                                    </div>
                                    <div class="col-6 col-md-6 text-left">
                                        <span class="user-input">Temporary</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 col-md-6 text-right">
                                        <h3 class="category">Month:</h3>
                                    </div>
                                    <div class="col-6 col-md-6 text-left">
                                        <span class="user-input">Temporary</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 col-md-6 text-right">
                                        <h3 class="category">Start Month: </h3>
                                    </div>
                                    <div class="col-6 col-md-6 text-left">
                                        <span class="user-input">Temporary</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 col-md-6 text-right">
                                        <h3 class="category">Hour:</h3>
                                    </div>
                                    <div class="col-6 col-md-6 text-left">
                                        <span class="user-input">Temporary</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 col-md-6 text-right">
                                        <h3 class="category">Amount:</h3>
                                    </div>
                                    <div class="col-6 col-md-6 text-left">
                                        <span class="user-input">Temporary</span>
                                    </div>
                                    </div>
                                <div class="row">
                                    <div class="col-6 col-md-6 text-right">
                                        <h3 class="category">
                                            Work-list:
                                        </h3>
                                    </div>
                                    <div class="col-6 col-md-6 text-left">
                                        <span class="user-input" style="display:inline-block;">
                                            <ul style="padding-left:0px;">
                                                @for (int j = 0; j < Wcnt - 1; j++)
                                                {
                                                    <li>@strlist[j]</li>
                                                }

                                            </ul>
                                        </span>
                                    </div>
                                    </div>

                                </div>

                            </div>



                    <button type="submit" class="btn buttonprimary" name="maid" value="@data2[i, 7]">Give Feedback</button>
                    <button type="button" class="btn buttonprimary">View Profile</button>


                </div>
                    <br />
                }
            </div>
        </form>
    </div>

        <!-- 	</div>  -->

        <script src="~/Scripts/JS/collpasible.js"></script>

</body>
@{
    Html.RenderPartial("footer");
}
</html>
